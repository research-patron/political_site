rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Candidate photos - publicly readable, admin writable
    match /candidates/{candidateId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // User avatars - user can write their own, everyone can read
    match /users/{userId}/avatar.{extension} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId &&
        extension in ['jpg', 'jpeg', 'png', 'webp'] &&
        request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Temporary uploads (admin only)
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}