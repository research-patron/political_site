    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.5.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "axios": "^1.6.8",
    "zod": "^3.23.6",
    "@google/genai": "^1.9.0",
    "@anthropic-ai/sdk": "^0.37.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5"
  },
  "private": true
}