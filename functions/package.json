{
  "name": "political-site-functions",
  "version": "0.1.0",
  "description": "Cloud Functions for Political Site Platform",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
